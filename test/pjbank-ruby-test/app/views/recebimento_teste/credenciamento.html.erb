<%# As váriaveis são declaradas no controlador, sendo utilizadas como váriaveis de instância %>

<html>
    <div class="container">
        <h1> Credenciamento</h1>
        <div class="row">
            <div class="col-md-12">
                <% if @json %>
                    <b>Status: </b><%= @res['status'] %><br>
                    <b>Mensagem: </b><%= @res['msg'] %><br>
                    <b>Credencial: </b><%= @res['credencial'] %><br>
                    <b>Chave: </b><%= @res['chave'] %><br>
                    <b>Conta Virtual: </b><%= @res['conta_virtual'] %><br>
                    <b>Agência Virtual: </b><%= @res['agencia_virtual'] %><br>
                <% else %>
                    <%= @res %>
                <% end %>
            </div>
            <br>
            <div class="col-md-12">
                <a href="/recebimento" class="btn btn-success">Voltar</a>
            </div>
        </div>
    </div>

    <style>
        .form-fields{
            line-height: 0.7;
            margin-bottom: 10px;
        }
        .label-field{
            font-size: 11px;
            margin-bottom: 0px;
            line-height: 1.2;
        }
        .input-field{
            width: 100%;
            height: 30px;
            font-size: 16px;
            padding-left: 10px;
        }
        .submit-field{
            height: 35px;
            width: 100%;
        }
    </style>
</html>