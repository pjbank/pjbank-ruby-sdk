<%# As váriaveis são declaradas no controlador, sendo utilizadas como váriaveis de instância %>

<html>
    <div class="container">
        <h1> Testes de Recebimento
            <%# <%= @teste %>
        <div class="row">
            <div class="col-md-3">
                <h3>
                    Credenciamento
                </h3>
                <%= form_tag("/recebimento/cartao/credenciamento", method: "post") do %>
                    <div class="form-fields">
                        <%= label_tag :nome_empresa, "Nome da empresa (Empresa de Exemplo):", class: 'label-field' %>
                        <%= text_field_tag :nome_empresa, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :conta_repasse, "Conta Repasse (99999-9):", class: 'label-field' %>
                        <%= text_field_tag :conta_repasse, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :agencia_repasse, "Agência Repasse (0001):", class: 'label-field' %>
                        <%= text_field_tag :agencia_repasse, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :banco_repasse, "Banco Repasse (001):", class: 'label-field' %>
                        <%= text_field_tag :banco_repasse, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :cnpj, "CNPJ (50282264000153):", class: 'label-field' %>
                        <%= text_field_tag :cnpj, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :ddd, "DDD (19):", class: 'label-field' %>
                        <%= text_field_tag :ddd, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :telefone, "Telefone (40096830):", class: 'label-field' %>
                        <%= text_field_tag :telefone, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :email, "E-mail (atendimento@pjbank.com.br):", class: 'label-field' %>
                        <%= text_field_tag :email, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :agencia, "Agencia (?):", class: 'label-field' %>
                        <%= text_field_tag :agencia, "", class: 'input-field' %>
                    </div>
                    <input type="hidden" name="cartao" value="true">
                    <input type="submit" class="btn btn-success submit-field" value="Enviar">
                <% end %>
            </div>
            <div class="col-md-3">
                <h3>
                    Emitir
                </h3>
                <%= form_tag("/recebimento/cartao/tokenizar", method: "post") do %>
                    <div class="form-fields">
                        <%= label_tag :credencial_cartao, "Credencial (1264e7bea04bb1c24b07ace759f64a1bd65c8560) :", class: 'label-field' %>
                        <%= text_field_tag :credencial_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :chave_cartao, "Chave (ef947cf5867488f744b82744dd3a8fc4852e529f) :", class: 'label-field' %>
                        <%= text_field_tag :chave_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :nome_cartao, "Nome Cartão (Cliente Exemplo) :", class: 'label-field' %>
                        <%= text_field_tag :nome_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :numero_cartao, "Número do Cartão (4012001037141112):", class: 'label-field' %>
                        <%= text_field_tag :numero_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :mes_vencimento, "Mês Vencimento (05):", class: 'label-field' %>
                        <%= text_field_tag :mes_vencimento, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :ano_vencimento, "Ano Vencimento (2018):", class: 'label-field' %>
                        <%= text_field_tag :ano_vencimento, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :cpf_cartao, "CPF Cartão (64111456529):", class: 'label-field' %>
                        <%= text_field_tag :cpf_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :email_cartao, "E-mail Cartão (api@pjbank.com.br):", class: 'label-field' %>
                        <%= text_field_tag :email_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :celular_cartao, "Celular Cartão (978456723):", class: 'label-field' %>
                        <%= text_field_tag :celular_cartao, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :codigo_cvv, "Código CVV (123):", class: 'label-field' %>
                        <%= text_field_tag :codigo_cvv, "", class: 'input-field' %>
                    </div>
                    <input type="submit" class="btn btn-success submit-field" value="Enviar">
                <% end %>
            </div>
            <div class="col-md-3">
                <h3>
                    Emissão em Lote
                </h3>
                <%= form_tag("/recebimento/emissao", method: "post") do %>
                    <div class="form-fields">
                        <%= label_tag :credencial, "Credencial (d3418668b85cea70aa28965eafaf927cd34d004c) :", class: 'label-field' %>
                        <%= text_field_tag :credencial, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :chave, "Chave (46e79d6d5161336afa7b98f01236efacf5d0f24b) :", class: 'label-field' %>
                        <%= text_field_tag :chave, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :pedido_numero, "Número de pedidos (pode ser array):", class: 'label-field' %>
                        <%= text_field_tag :pedido_numero, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :formato, "Formato (opcional) (carne):", class: 'label-field' %>
                        <%= text_field_tag :formato, "", class: 'input-field' %>
                    </div>
                    
                    <input type="submit" class="btn btn-success submit-field" value="Enviar">
                <% end %>
            </div>
            <div class="col-md-3">
                <h3>
                    Emissão de Carnê
                </h3>
                <%= form_tag("/recebimento/carne", method: "post") do %>
                    <div class="form-fields">
                        <%= label_tag :credencial, "Credencial (d3418668b85cea70aa28965eafaf927cd34d004c) :", class: 'label-field' %>
                        <%= text_field_tag :credencial, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :chave, "X-Chave (46e79d6d5161336afa7b98f01236efacf5d0f24b) :", class: 'label-field' %>
                        <%= text_field_tag :chave, "", class: 'input-field' %>
                    </div>
                    <div class="form-fields">
                        <%= label_tag :pedido_numero, "Número de pedidos (pode ser array):", class: 'label-field' %>
                        <%= text_field_tag :pedido_numero, "", class: 'input-field' %>
                    </div>
                    <input type="hidden" name="formato" value="carne">
                    <input type="submit" class="btn btn-success submit-field" value="Enviar">
                <% end %>
            </div>
        </div>
    </div>

    <style>
        .form-fields{
            line-height: 0.7;
            margin-bottom: 10px;
        }
        .label-field{
            font-size: 11px;
            margin-bottom: 0px;
            line-height: 1.2;
        }
        .input-field{
            width: 100%;
            height: 30px;
            font-size: 16px;
            padding-left: 10px;
        }
        .submit-field{
            height: 35px;
            width: 100%;
        }
    </style>
</html>